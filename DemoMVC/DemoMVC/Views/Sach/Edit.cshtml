@model DemoMVC.Models.Sach

@{
    ViewData["Title"] = "Edit";
}

<style>

    a {
        color: black;
        text-decoration: none;
    }

    .btn-action {
        padding: 5px;
        border-radius: 3px;
        color: white;
    }

    .btn-action:hover {
        background-color: darkgray;
        color: white;
    }

    .btn-detail {
        background-color: black;
    }
 
</style>


<h4 style="text-align:center">Cập nhật sách</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Masach" />
            <div class="form-group">
                <label asp-for="Tensach" class="control-label"></label>
                <input asp-for="Tensach" class="form-control" />
                <span asp-validation-for="Tensach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sotrang" class="control-label"></label>
                <input asp-for="Sotrang" class="form-control" />
                <span asp-validation-for="Sotrang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ngonngu" class="control-label"></label>
                <input asp-for="Ngonngu" class="form-control" />
                <span asp-validation-for="Ngonngu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tacgia" class="control-label"></label>
                <input asp-for="Tacgia" class="form-control" />
                <span asp-validation-for="Tacgia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nxb" class="control-label"></label>
                <input asp-for="Nxb" class="form-control" />
                <span asp-validation-for="Nxb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Namxb" class="control-label"></label>
                <input asp-for="Namxb" class="form-control" />
                <span asp-validation-for="Namxb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anhbia" class="control-label"></label>
                <input asp-for="Anhbia" class="form-control" />
                <span asp-validation-for="Anhbia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mota" class="control-label"></label>
                <input asp-for="Mota" class="form-control" />
                <span asp-validation-for="Mota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br/>

<div>
    <a asp-action="Index" class="btn-action btn-detail">Trở về danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
