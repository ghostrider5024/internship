@model MVC2.Models.Class

@{
    ViewData["Title"] = "Details";
}


<div>
    <h4>Thông tin lớp</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Tên lớp  </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">Sĩ số </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Numbers)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Cập nhật</a> |
    <a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
</div>
