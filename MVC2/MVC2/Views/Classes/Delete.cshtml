@model MVC2.Models.Class

@{
    ViewData["Title"] = "Delete";
}


<h3>Xác nhận xóa lớp học này?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Tên lớp  </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">Sĩ số </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Numbers)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
    </form>
</div>
