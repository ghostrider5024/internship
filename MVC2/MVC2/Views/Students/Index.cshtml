@model IEnumerable<MVC2.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<style>
    td {
        vertical-align: middle
    }

    a {
        color: black;
        text-decoration: none;
    }

        a:hover {
            color: black;
            text-decoration: none;
        }

    .btn-action {
        padding: 5px;
        border-radius: 3px;
        color: white;
    }

        .btn-action:hover {
            background-color: darkgray;
            color: white;
        }

    .btn-detail {
        background-color: cornflowerblue;
    }

    .btn-edit {
        background-color: green;
    }

    .btn-delete {
        background-color: red;
    }

</style>



<div >
    <div class="container ">
        <h3>Danh sách sinh viên</h3>

        <p>
            <a asp-action="Create" class="btn-action btn-edit">Thêm mới</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>Họ và tên</th>
                    <th>Ngày sinh</th>
                    <th>Giới tính</th>
                    <th>Địa chỉ</th>
                    <th>SĐT</th>
                    <th>Nơi sinh</th>
                    <th>Lớp</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Fullname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Birthday)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Gender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Address)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlaceOfBirth)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Class.Name)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-action btn-edit">Cập nhật</a> |
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-action btn-detail">Chi tiết</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-action btn-delete">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
